<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <TextView
        android:id="@+id/notebookCourseNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingStart="8dp"
        android:paddingLeft="8dp"
        android:paddingEnd="8dp"
        android:paddingRight="8dp"
        android:text="80000"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/notebookCourseName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/notebookCourseNum"
        android:ellipsize="end"
        android:gravity="start"
        android:text="Very long course name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/list_view_detail" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notebookCourseNum"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:paddingTop="5dp"
        android:text="@string/date"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/list_view_label" />

    <TextView
        android:id="@+id/notebookDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notebookCourseNum"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/textView1"
        android:paddingTop="5dp"
        android:text="15/07/2016"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/list_view_detail" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/notebookDate"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/notebookDate"
        android:text="@string/type"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/list_view_label" />

    <TextView
        android:id="@+id/notebookTypeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/textView"
        android:text="Final"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/list_view_detail" />

</RelativeLayout>